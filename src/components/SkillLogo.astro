---
// src/components/SkillLogo.astro
import { Icon } from 'astro-icon/components';

interface Props {
  name: string;
  icon: string;
}
const { name, icon } = Astro.props;
---
<div class="skill-item">
    <Icon name={icon} class="skill-svg" />
    <p>{name}</p>
</div>

<style>
    /* Styling dasar dari global.css */
    .skill-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        text-align: center;
    }
    .skill-item p {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin: 0;
    }
    
    /* Styling spesifik untuk SVG dari astro-icon */
    .skill-svg {
        width: 48px;
        height: 48px;
        /* Menggunakan 'currentColor' agar warna ikon mengikuti warna teks,
           sehingga mudah diubah temanya nanti jika perlu. */
        color: var(--text-color); 
    }
</style>